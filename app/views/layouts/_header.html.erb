<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", home_path, id: "logo" %>
    <div class="locale-switcher">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("languages.en"), request.params.merge(locale: :en) %></li>
        <li><%= link_to t("languages.vi"), request.params.merge(locale: :vi) %></li>
      </ul>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts._header.home"), home_path %></li>
        <li><%= link_to t("layouts._header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts._header.users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", id: "account", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t("layouts._header.account") %>
              <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu" id="dropdown-menu">
            <li><%= link_to t("layouts._header.profile"), current_user %></li>
            <li><%= link_to t("layouts._header.settings"), '#' %></li>
            <li class="divider"></li>
            <li> <%= link_to t("layouts._header.logout"), logout_path, data: { "turbo-method": :delete } %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("layouts._header.login"), login_path %></li>
      <% end %>
      </ul>
    </nav>
  </div>
</header>
