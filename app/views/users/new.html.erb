<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages"%>
      <%= f.label :name, t(".name") %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :email, t(".email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :birthday, t(".birthday") %>
      <%= f.date_field :birthday, class: "form-control" %>
      <%= f.label :gender, t(".gender") %>
      <%= f.select :gender, options_for_select(
        gender_options_for_select,
        f.object.gender), { include_blank: t(".gender_select_placeholder") }, { class: "form-control" } %>
      <%= f.label :password, t(".password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t(".confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t(".create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
