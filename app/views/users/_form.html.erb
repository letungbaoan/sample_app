<%= form_for @user do |f| %>
  <%= render "shared/error_messages"%>
  <%= f.label :name, t("users._form.name") %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email, t("users._form.email") %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :birthday, t("users._form.birthday") %>
  <%= f.date_field :birthday, class: "form-control" %>
  <%= f.label :gender, t("users._form.gender") %>
  <%= f.select :gender, options_for_select(
    gender_options_for_select,
    f.object.gender), { include_blank: t("users._form.gender_select_placeholder") }, { class: "form-control" } %>
  <%= f.label :password, t("users._form.password") %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t("users._form.confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
